<h1>Owners</h1>

<!-- Owner search box -->
    <%= form_tag("/owners", method: :get, role: 'search', class: 'form-inline') do %>
      <div class = "form-group">
        <%= text_field_tag(:search_owner, nil, placeholder: 'Search owners', class: 'form-control input-sm') %>
      </div>
      <%= submit_tag('Search', class: 'btn btn-default btn-sm') %>
    <% end %>


<table class="table table-hover">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone</th>
      <th>Evacuation Waiver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.first_name %></td>
        <td><%= owner.last_name %></td>
        <td><%= owner.phone %></td>
        <td><%= owner.evac_waiver %></td>
        <td><%= link_to fa_icon('eye', text:'Show'), owner, class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to fa_icon('pencil', text:'Edit'), edit_owner_path(owner), class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to fa_icon('trash-o', text:'Delete'), owner, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_owner_path, class: "btn btn-primary" %>
