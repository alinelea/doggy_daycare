      <ul>
      <% @dog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control", placeholder: "Pooch" %>
  </div>
  <div class="field form-group">
    <%= f.label :breed_id %><br>
    <%= f.collection_select :breed_id, @breeds, :id, :breed_name, {prompt: "Select a breed"}, {class: "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :owner_id %><br>
    <%= f.collection_select :owner_id, @owners, :id, :last_comma_first, {prompt: 'Select an owner'}, {class: "form-control"} %>
  </div>
  <div class="field form-group">
    <%= f.label :medical %><br>
    <%= f.text_field :medical %>
  </div>
  <div class="field form-group">
    <%= f.label :vet %><br>
    <%= f.text_field :vet %>
  </div>
  <div class="field form-group">
    <%= f.label :dob %><br>
    <%= f.date_select :dob %>
  </div>

  <div class = "field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

    </div>
    <div class="field  form-group">
      <div class = "checkbox-inline"
        <%= f.check_box :in_daycare %>
        <%= f.label :in_daycare, "Currently in daycare" %><br>
      </div>
    </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
